 class Tabuada
    {
         
        static void Main(string[] args)

        {
            int numero, resultado;

            Console.WriteLine("Digite um n√∫mero para construir uma tabuada: ");
            numero = Convert.ToInt16(Console.ReadLine());

            for (int x = 1; x <= 10; x++)
            {
                resultado = numero * x;
                Console.WriteLine(x + " * " + numero + " = " + resultado);
            }

            Console.ReadLine();
           


        }

        
    }
}
